# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# exclude the following files from diff
*.lock            text -diff
package-lock.json text -diff
pnpm-lock.yaml    text eol=lf -diff
yarn.lock         text -diff

# npm writes lf by default, even on windows
package.json eol=lf

# Documents
*.doc      diff=astextplain
*.docx     diff=astextplain
*.pdf      diff=astextplain
*.rtf      diff=astextplain
*.md       text diff=markdown

# Scripts
*.bash     text eol=lf
*.fish     text eol=lf
*.zsh      text eol=lf
*.sh       text eol=lf
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf

# IDE
*.sln             text eol=crlf
*.props           text eol=crlf
*.vcxproj         text eol=crlf
*.vcxproj.filters text eol=crlf

# Fonts
*.ttf             binary
*.eot             binary
*.otf             binary
*.woff            binary
*.woff2           binary

# Graphics
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.ico      binary
*.pdf      binary
*.eps      binary
*.psd      binary

# Media
*.mp3      binary

# Archives
*.7z       binary
*.gz       binary
*.tar      binary
*.tgz      binary
*.zip      binary
*.rar      binary
*.jar      binary

# Executables
*.exe             binary
*.pyc             binary

